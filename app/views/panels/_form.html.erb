<%= form_for(@panel) do |f| %>
  <% if @panel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@panel.errors.count, "error") %> prohibited this panel from being saved:</h2>

      <ul>
      <% @panel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <%= f.hidden_field :panel_type_id %>

  <%= f.hidden_field :page_id %>

  <%= f.text_field :x, placeholder: "X Coords" %>
  <%= f.text_field :y, placeholder: "Y Coords" %>


  <%= f.fields_for :properties, OpenStruct.new(@panel.properties) do |builder| %>
    <% @panel.panel_type.panel_fields.each do |field| %>
      <%= render "panels/fields/#{field.field_type}", field: field, f: builder %>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
