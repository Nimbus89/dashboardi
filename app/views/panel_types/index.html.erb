<h1>Listing panel_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @panel_types.each do |panel_type| %>
      <tr>
        <th><%= panel_type.name %></th>
        <th><%= link_to 'Show', panel_type %></th>
        <th><%= link_to 'Edit', edit_panel_type_path(panel_type) %></th>
        <th><%= link_to 'Destroy', panel_type, method: :delete, data: { confirm: 'Are you sure?' } %></th>
      </tr>
      <% panel_type.panel_fields.each do |field| %>
        <tr>
        <td><%= field.name %></td>
        <td><%= field.field_type %></td>
        </tr>
      <%  end %>
    <% end %>
  </tbody>
</table>

